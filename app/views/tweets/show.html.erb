<p id="notice"><%= notice %></p>

<p>
  <strong>Body:</strong>
  <%= @tweet.body %>
</p>
<br>
<p>
  <strong>Retweet:</strong>
  <%= @tweet.retweets_count %>
</p>
<br>
<p>
  <strong>Likes:</strong>
  <%= @tweet.likes_count %>
</p>
<br>
<p>
  <strong>User:</strong>
  <%= @tweet.user.display_name %>
</p>

<%= link_to 'Edit', edit_tweet_path(@tweet) %> |
<%= link_to 'Back', tweets_path %>
<%= link_to '<- Tuit', root_path %>

<%= render 'tweet', tweet: @tweet %>

<% if current_user%>
  <%= render 'comment_form', locals: { tweet_id: @tweet.id, user_id: current_user } %>
<% end %>

<%= render 'tweet_comments', tweet: @tweet %>
