<p id="notice"><%= notice %></p>
<div class="tweet">
  <% @tweets.each do |tweet| %>
  <div class="tweet-container tweet-info">
    <div class="user-photo"></div>
    <div class="tweet-info">
      <h2>
        <%= tweet.user.display_name %>
        <span>
          @<%= tweet.user.username %> - <%= tweet.created_at.to_date.strftime("%-d
          %b")%>
        </span>
      </h2>
      <p class="tweet-body"><%= tweet.body %></p>
      <div class="tweet-reaction">
        <p class="reaction r-r"><i class="fas fa-retweet"></i> <%= tweet.retweets_count %></p>
        <p class="reaction"><i class="far fa-heart"></i> <%= tweet.likes_count %></p>
      </div>
    </div>
  </div>
  <% end %>
  <%= link_to 'New Tweet', new_tweet_path %>
</div>
<div class="separator">
  <%= render "users/user", locals: {user: @user } %>
</div>
<div class="separator">
  <div class="profile-linksclasstweet">
    <%= link_to "TUITS", user_tweets_path(@user), class: "profile-linksclasstweet link-actived" %>
    <%= link_to "LIKES", user_favorites_path(@user), class: "profile-linksclasstweet" %>
  </div>
</div>
<% @tweets.each do |tweet| %>
  <div class="separator">
    <%= render "tweets/tweet", locals: {tweet: tweet, user: @user} %>
  </div>
<%end %>
